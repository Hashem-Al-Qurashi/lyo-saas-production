# WhatsApp Webhook Configuration for Vercel
# Copy this file to .env.local for local development

# WhatsApp Verification Token (use a strong, unique token)
WEBHOOK_VERIFY_TOKEN=lyo_verify_2024

# Hetzner Production Server URL
HETZNER_SERVER_URL=http://135.181.249.116:8000

# WhatsApp Business API Credentials
WHATSAPP_BUSINESS_ID=your_business_id_here
WHATSAPP_ACCESS_TOKEN=your_access_token_here

# Webhook Security (generate a random secret)
WEBHOOK_SECRET=generate_random_secret_here

# Monitoring Configuration
MONITORING_ENABLED=true
ALERT_EMAIL=admin@lyoassistant.com

# Retry Configuration
MAX_RETRIES=3
RETRY_DELAY=1.0
REQUEST_TIMEOUT=10

# Backup Webhook URL (optional)
BACKUP_WEBHOOK_URL=https://lyo-backup.railway.app/webhook

# Performance Settings
MAX_CONCURRENT_REQUESTS=100
RATE_LIMIT_PER_MINUTE=1000

# Development Settings (only for local testing)
DEBUG_MODE=false
LOG_LEVEL=INFO