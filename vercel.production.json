{
  "name": "lyo-webhook",
  "version": 2,
  "builds": [
    {
      "src": "api/*.py",
      "use": "@vercel/python"
    }
  ],
  "functions": {
    "api/webhook_production.py": {
      "runtime": "python3.9",
      "maxDuration": 10,
      "memory": 512,
      "environment": {
        "WEBHOOK_VERIFY_TOKEN": "@webhook_verify_token",
        "HETZNER_SERVER_URL": "@hetzner_server_url",
        "WEBHOOK_SECRET": "@webhook_secret",
        "MONITORING_ENABLED": "true",
        "MAX_RETRIES": "3",
        "RETRY_DELAY": "1.0",
        "REQUEST_TIMEOUT": "10"
      }
    },
    "api/health.py": {
      "runtime": "python3.9",
      "maxDuration": 5,
      "memory": 128
    },
    "api/metrics.py": {
      "runtime": "python3.9",
      "maxDuration": 5,
      "memory": 128
    }
  },
  "routes": [
    {
      "src": "/webhook",
      "dest": "/api/webhook_production",
      "methods": ["GET", "POST"]
    },
    {
      "src": "/health",
      "dest": "/api/health",
      "methods": ["GET"]
    },
    {
      "src": "/metrics",
      "dest": "/api/metrics",
      "methods": ["GET"]
    },
    {
      "src": "/",
      "dest": "/api/health",
      "methods": ["GET"]
    }
  ],
  "env": {
    "PYTHON_VERSION": "3.9"
  },
  "regions": ["iad1"],
  "public": false,
  "github": {
    "enabled": true,
    "autoAlias": true,
    "silent": false,
    "autoJobCancelation": true
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Strict-Transport-Security",
          "value": "max-age=31536000; includeSubDomains"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    }
  ]
}